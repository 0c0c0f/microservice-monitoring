{
  "trigger": {
    "schedule": {
      "interval": "1m"
    }
  },
  "input": {
    "search": {
      "request": {
        "body": {
          "size": 0,
          "query": {
            "bool": {
              "filter": [
                {
                  "range": {
                    "@timestamp": {
                    "from": "{{ctx.trigger.scheduled_time}}||-2m",
                    "to": "{{ctx.trigger.triggered_time}}"
                  }
                  }
                },
                {
                  "term": {
                    "up": false
                  }
                }
              ]
            }
          }
        },
        "indices": [
          "heartbeat-*"
        ]
      }
    }
  },
  "condition": {
    "compare": {
      "ctx.payload.hits.total": {
        "gte": 2
      }
    }
  },
  "actions": {
    "log": {
      "logging": {
        "text": "There were {{ctx.payload.hits.total}} bad pings of your service. Threshold is 2."
      }
    }
  }
}
